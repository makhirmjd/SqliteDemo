<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SqliteDemo.Views.MainPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:SqliteDemo.Models"
    xmlns:ViewModels="clr-namespace:SqliteDemo.ViewModels"
    Title="MainPageView"
    x:DataType="ViewModels:MainPageViewModel">
    <Grid RowDefinitions=".2*,.8*">
        <VerticalStackLayout>
            <Entry Placeholder="Name" Text="{Binding CurrentCustomer.Name}" />
            <Entry Placeholder="Address" Text="{Binding CurrentCustomer.Address}" />
            <Button Command="{Binding AddOrUpdateCommand}" Text="Add or Update" />
        </VerticalStackLayout>
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Customers}"
            SelectedItem="{Binding CurrentCustomer}"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Models:Customer">
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem
                                    Text="Delete"
                                    BackgroundColor="Purple"
                                    Command="{Binding DeleteCommand, Source={RelativeSource AncestorType={x:Type ViewModels:MainPageViewModel}}}" />
                                </SwipeItems>
                        </SwipeView.LeftItems>
                        <Grid ColumnDefinitions="*,*">
                            <Label Text="{Binding Name}" />
                            <Label Grid.Column="1" Text="{Binding Address}" />
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>